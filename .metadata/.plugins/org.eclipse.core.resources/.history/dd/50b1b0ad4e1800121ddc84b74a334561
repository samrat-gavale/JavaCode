*/
		mat[0][0] = 1;
		for(i=1;i<N;i++)
			for(j=1;j<N;j++)
				mat[i][j] = (blocked_ver[i-1][j] != 1 ? mat[i-1][j] : 0) + 
							(blocked_hor[i][j-1] != 1 ? mat[i][j-1] : 0);
/*		for(i=0;i<N;i++)
