		blocked_ver = new int[100][100];
		blocked_hor = new int[100][100];
		int M, N,i,j;
		Scanner s = new Scanner(System.in);
		M = s.nextInt();
		N = s.nextInt();
		
/*		for(i=0;i<N;i++)
			mat[0][i] = 1;
		for(i=0;i<M;i++)
